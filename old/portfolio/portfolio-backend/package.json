{
  "name": "portfolio-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "nodemon --watch '**/*' -e ts,tsx --exec ts-node bin/www",
    "dev": "./node_modules/.bin/nodemon bin/www",
    "prd": "pm2 start bin/www",
    "test": "jest --watchAll"
  },
  "dependencies": {
    "@types/node": "^11.9.6",
    "@types/request": "^2.48.1",
    "ejs": "~2.3.3",
    "koa": "^2.2.0",
    "koa-bodyparser": "^3.2.0",
    "koa-convert": "^1.2.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^2.0.1",
    "koa-onerror": "^4.1.0",
    "koa-router": "^7.1.1",
    "koa-static": "^3.0.0",
    "koa-views": "^5.2.1",
    "request": "^2.88.0",
    "superagent": "^4.1.0",
    "supertest": "^3.4.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.6",
    "@types/koa-bodyparser": "^4.2.2",
    "@types/koa-convert": "^1.2.2",
    "@types/koa-json": "^2.0.18",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.0.39",
    "@types/koa-static": "^4.0.1",
    "@types/koa-views": "^2.0.3",
    "@types/superagent": "^3.8.6",
    "@types/supertest": "^2.0.7",
    "debug": "^2.6.9",
    "http": "0.0.0",
    "jest": "^24.1.0",
    "nodemon": "^1.8.1",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3333"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json",
        "diagnostics": true
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ],
    "testRegex": "\\.test\\.ts$"
  }
}
